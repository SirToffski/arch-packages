pkgname=mesa+clang
pkgdesc="Mesa open-source implementation of the OpenGL specification"
pkgver=21.1.5
_pkgver=21.1.5
pkgrel=3
arch=('x86_64')
makedepends=('git' 'python-mako' 'xorgproto'
  'libxml2' 'libx11' 'libvdpau' 'libva' 'elfutils' 'libxrandr'
  'ocl-icd' 'wayland-protocols' 'meson' 'ninja' 'glslang' 'valgrind')
depends=('libdrm' 'libxxf86vm' 'libxdamage' 'libxshmfence' 'libelf'
  'libomxil-bellagio' 'libunwind' 'libglvnd' 'wayland' 'lm_sensors' 'libclc' 'vulkan-icd-loader' 'zstd' 'expat')
optdepends=('opengl-man-pages: for the OpenGL API man pages')
provides=('mesa' "mesa=${pkgver}" 'opencl-mesa' 'vulkan-intel' 'vulkan-radeon' 'vulkan-mesa-layer' 'libva-mesa-driver' 'mesa-vdpau' 'vulkan-swrast' 'vulkan-driver' 'opengl-driver' 'opencl-driver' 'mesa-libgl')
conflicts=('mesa' 'opencl-mesa' 'vulkan-intel' 'vulkan-radeon' 'vulkan-mesa-layer' 'libva-mesa-driver' 'mesa-vdpau' 'vulkan-swrast')
url="https://www.mesa3d.org"
license=('custom')
source=(
  "https://archive.mesa3d.org/mesa-${_pkgver}.tar.xz"{,.sig}
  'LICENSE'
  'mesa.conf'
  '0001.patch'
  '0002.patch'
)

sha256sums=('022c7293074aeeced2278c872db4fa693147c70f8595b076cf3f1ef81520766d'
            'SKIP'
            '7fdc119cf53c8ca65396ea73f6d10af641ba41ea1dd2bd44a824726e01c8b3f2'
            '33e14140fbfca33b62fc83bfe062fe48f0539a239c0821118d55abfd7993ed3c'
            '18c7b5d570524a493b7c4d4061668e975891770d9c36e48fb746bd0d6a64047b'
            '4b70fc3f0b07f5f056de798b2ea79e342a1aa061689a90fc994791eeb16cc00f')

validpgpkeys=(
  '57551DE15B968F6341C248F68D8E31AFC32428A6' # Keith Packard <keithp@keithp.com>
)

# NINJAFLAGS is an env var used to pass commandline options to ninja
# NOTE: It's your responbility to validate the value of $NINJAFLAGS. If unsure, don't set it.

DRI_DRIVERS="i915,i965,r200,r100,nouveau"
GALLIUM_DRIVERS="r300,r600,radeonsi,nouveau,virgl,svga,swrast,swr,iris,zink"
VULKAN_DRIVERS="amd,intel,swrast"
VULKAN_LAYERS="device-select,intel-nullhw,overlay"

_extra_lto_flag=""

prepare() {

  if clang --version 2>/dev/null | grep -iq "clang\s*version\s*[0-9]" && ld.lld --version 2>/dev/null | grep -iq "LLD\s*[0-9]"; then
    _extra_lto_flag='-D b_lto_mode=thin'
  fi

  if [[ -d _build ]]; then
    rm -rf _build
  fi

  cd "${srcdir:?}/mesa-${_pkgver}" || (
    echo -e "\E[1;31mCan't cd to ${srcdir:?}/mesa-${_pkgver} directory! Prepare Failed! \E[0m"
    exit 1
  )

  # Fix radeonsi rendering glitches
  patch --forward --strip=1 --input="${srcdir:?}/0001.patch"
  patch --forward --strip=1 --input="${srcdir:?}/0002.patch"

  if [[ -f "${srcdir:?}/mesa.conf" ]]; then
    # shellcheck disable=SC1091
    source "${srcdir:?}/mesa.conf"
  fi

}

build() {

  meson setup mesa-${_pkgver} _build \
    --auto-features enabled \
    --wrap-mode nodownload \
    -D debug=false \
    -D optimization=2 \
    -D b_ndebug=true \
    -D b_lto=true ${_extra_lto_flag} \
    -D b_pie=true \
    -D prefix=/usr \
    -D sysconfdir=/etc \
    -D platforms=x11,wayland \
    -D dri-drivers="${DRI_DRIVERS}" \
    -D gallium-drivers="${GALLIUM_DRIVERS}" \
    -D vulkan-drivers="${VULKAN_DRIVERS}" \
    -D vulkan-layers="${VULKAN_LAYERS}" \
    -D swr-arches=avx,avx2 \
    -D gallium-extra-hud=true \
    -D gallium-omx=bellagio \
    -D gallium-nine=true \
    -D gallium-opencl=icd \
    -D gallium-va=enabled \
    -D gallium-vdpau=enabled \
    -D gallium-xa=enabled \
    -D gallium-xvmc=disabled \
    -D llvm=enabled \
    -D dri3=enabled \
    -D egl=enabled \
    -D gbm=enabled \
    -D gles1=disabled \
    -D gles2=enabled \
    -D glvnd=true \
    -D glx=dri \
    -D libunwind=enabled \
    -D lmsensors=enabled \
    -D osmesa=true \
    -D shared-glapi=enabled \
    -D zstd=enabled \
    -D tools=[] \
    -D microsoft-clc=disabled \
    -D valgrind=disabled

  meson configure _build

  ninja ${NINJAFLAGS} -C _build

}

package() {

  DESTDIR="${pkgdir:?}" ninja ${NINJAFLAGS} -C _build install

  ln -s /usr/lib/libGLX_mesa.so.0 "${pkgdir:?}/usr/lib/libGLX_indirect.so.0"

  install -Dm644 "${srcdir:?}/LICENSE" "${pkgdir:?}/usr/share/licenses/${pkgbase:?}/LICENSE"

}
