source=("git+https://sourceware.org/git/glibc.git#commit=${_commit}"
  #source=("https://ftp.gnu.org/gnu/glibc/glibc-${pkgver}.tar.xz"
  locale-gen
  sdt.h sdt-config.h
  glibc-fedora-linux-tcsetattr.patch
  glibc-newlocale-error.patch
  glibc-cs-path.patch
)
